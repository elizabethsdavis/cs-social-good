{
  "manifest_version": 2,

  "name": "TLDR Chrome Extension",
  "description": "This extension allows the user to share a link to TLDR.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://*.indico.io/",
    "http://*.smmry.com/"
  ]
}